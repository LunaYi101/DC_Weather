    <form class="input-group mb-3 parent result" action="/" method="POST">
        <div class="content">
            <h4 class="display-2 title">텍스트 감정분석기<h4>
            <div class="input-group">
                <input type="text" class="form-control" aria-label="Search" aria-describedby="button-addon2"
                    placeholder="<%= text %>" name="text">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">분석</button>
            </div>
        </div>

        <div class="container mt-4 score-div">
            <% for (let i = 0; i < data.length; i += 6) { %>
                <div class="row">
                    <% for (let j = i; j < i + 6 && j < data.length; j++) { %>
                        <div class="col-md-2">
                            <div class="grid-item">
                                <strong><%= data[j].label %></strong><br>
                                <span>함유량: <%= (data[j].score * 100).toFixed(4) %>%</span>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </form>

    <form class="input-group mb-3" style="justify-content: center" action="/feedback" method="POST">
        <div class="content">
            <div class="input-group">
                <input type="text" class="form-control" aria-label="Search" aria-describedby="button-addon2"
                    placeholder="개발자에게 개선하면 좋을 것 같은 피드백을 마구마구 보내주세요! 감사합니다!!!" name="text">
                <button class="btn btn-outline-secondary" type="submit" id="button-addon2">전송</button>
            </div>
        </div>
    </form>

